{
    // *********************************************
    // General Settings for all file types
    // *********************************************
    // Workbench/Editor preferences
    "workbench.colorTheme": "Atom One Dark",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "window.restoreWindows": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.openPositioning": "last",

    // Tab size per file type
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [80],
    },
    "[java]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    
    // OS DEPENDENCE
    // Terminal uses Cmder
    "terminal.integrated.shell.windows": "cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k",
        // This doesn't support variable sub...
        "C:\\Users\\bao.quach\\Apps\\cmder\\vendor\\init.bat"
    ],


    // *********************************************
    // Python Settings
    // *********************************************
    // Exclude default vscode and python virtual env
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/.pyenv": true,
        "**/*.db": true,
        "**/__pycache__": true,
        "**/migrations": true,
    },

    // Jinja2 templates
    "files.associations": {
        "*.j2": "html",
        "*.html.j2": "html"
    },

    // OS DEPENDENCE
    // Default python path
    "python.pythonPath": "${env.USERPROFILE}\\Apps\\python\\venv\\3_7",
    
    // Help with linting in flask project
    "python.linting.pylintArgs": [
        "--generated-members=Column,Table,Integer,String,DateTime,relationship,backref,ForeignKey,add,commit,rollback,setLevel,error,debug,info",
        "--disable=C0111,C0103,C0413"],


    // *********************************************
    // Java Settings
    // *********************************************
    // OS DEPENDENCE
    "java.home": "C:\\Users\\bao.quach\\Apps\\jdk\\ora11",

    
    // *********************************************
    // Depending on non-essential 3rd party ext.
    // *********************************************
    "workbench.iconTheme": "vscode-icons",
}
